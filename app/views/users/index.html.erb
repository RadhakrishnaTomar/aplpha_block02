<div id="page-content">
<h1 class="text-center mt-4">User index page </h1>
<%@users.each do |user| %>
<div class ="row justify-content-md-center">
	<div class="col-8 mt-4">
		<div class="card text-center shadow mb-5 bg-white rounded">
		  <div class="card-header">
		   <%= link_to user.username,user %>
		  </div>
		  <div class="card-body">
		    <h5 class="card-title"><%#= link_to .title,users_path(user),class:"text-success" %></h5>
		    <a><%= link_to 'View',user_path(user), class:"btn btn-outline-success"%></a>
		    <a><%= link_to 'Edit',edit_user_path(user), class:"btn btn-outline-primary"%></a>
		    <a><%=link_to 'Delete',user_path(user),data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure?"},class:"btn btn-outline-danger"%></a>
		  </div>
		  <div class="card-footer text-muted">
		    <small>Created <%=time_ago_in_words(user.created_at)%> ago
		     </small>
		  </div>
		</div>
  </div>
</div>
<% end %>
</div>